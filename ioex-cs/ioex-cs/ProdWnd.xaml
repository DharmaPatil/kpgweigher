<Window x:Class="ioex_cs.ProdWnd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ProductWnd" Height="768" Width="1024" Topmost="False" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" ShowInTaskbar="False" ResizeMode="CanResize" Background="#FFEEF2FB">
    <Window.Resources>
        <ControlTemplate x:Key="imgBtn" TargetType="{x:Type Button}">
            <Grid>
                <Rectangle x:Name="ImageRect" Stroke="Black" StrokeThickness="1" Height="77" Width="147" Margin="5,5,5,20">
                    <Rectangle.Fill>
                        <ImageBrush x:Name="ImageFill"/>
                    </Rectangle.Fill>
                </Rectangle>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <ScrollViewer Name="scrollViewer1">
            <WrapPanel Height="648" Name="wrapPanel1" Width="950" />
        </ScrollViewer>
    </Grid>
</Window>
